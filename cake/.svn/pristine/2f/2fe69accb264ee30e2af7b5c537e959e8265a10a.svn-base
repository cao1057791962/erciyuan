<script>
	var username=document.getElementsByTagName("input")[0];
	var pwd=document.getElementsByTagName("input")[1];
	var pwd1=document.getElementsByTagName("input")[2];
	var btn=document.getElementsByTagName("input")[3];
	var txt=document.getElementsByTagName("label");
	var check=document.getElementsByTagName("input")[4];
	console.log(check.checked)
	username.onblur=function(){
		var t=username.value;
		var s=/^[a-zA-Z0-9]{3,16}/.test(t);
		if(!s)
		{
			username.value="";
			txt[0].innerHTML="您输入的用户名格式不正确！"
			txt[0].style.color="red";
		}
		else
		{
			txt[0].innerHTML="输入的用户名格式正确！"
			txt[0].style.color="#ccc";
		}
	}
	pwd.onblur=function(){
		var t=pwd.value;
		var s=/^[a-zA-Z0-9_-]{6,20}$/.test(t);
		if(!s)
		{
			pwd.value="";
			txt[1].innerHTML="您输入的密码名格式不正确！"
			txt[1].style.color="red";
		}
		else
		{
			txt[1].innerHTML="输入的密码格式正确！"
			txt[1].style.color="#ccc";
		}
	}
	pwd1.onblur=function(){
		var t=pwd1.value;
		var s=pwd.value;
		if(t!=s)
		{
			pwd.value="";
			txt[2].innerHTML="您输入的密码不一致！"
			txt[2].style.color="red";
			bstop=true;
		}
		else
		{
			txt[2].innerHTML="密码一致！"
			txt[2].style.color="#ccc";
		}
	}
	btn.onclick=function(){
		var obj={};
		obj.username=username.value;
		obj.pwd=pwd.value;
		if(username.value!=null&&pwd.value!=null&&pwd1.value==pwd.value&&check.checked)
		{
			var str=JSON.stringify(obj);
			setCookie("shuju",str,7);
			location.href="denglu.html";
		}
		else{
			alert("请把信息填写完整！");
		}
	}
</script>