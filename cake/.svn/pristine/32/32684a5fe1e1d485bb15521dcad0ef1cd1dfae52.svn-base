<script>
	var num = JSON.parse(getCookie("shuju"));
	
	var ip=document.querySelectorAll("input");
	var txt=document.querySelectorAll("label");
	ip[2].onclick=function(){
		if(ip[0].value==num.username&&ip[1].value==num.pwd)
		{	
			location.href="index.html"
		}
		if(ip[0].value!=num.username)
		{
			txt[0].innerHTML="用户名不存在！";
			txt[0].style.color="red";
		}
		if(ip[1].value!=num.pwd)
		{
			txt[1].innerHTML="密码错误！";
			txt[1].style.color="red";
		}
	}
	ip[0].onclick=function(){
		txt[0].innerHTML="";
		txt[1].innerHTML="";
	}
	ip[1].onclick=function(){
		txt[0].innerHTML="";
		txt[1].innerHTML="";
	}
</script>