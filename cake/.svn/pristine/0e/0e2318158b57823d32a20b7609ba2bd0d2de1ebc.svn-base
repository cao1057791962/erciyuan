body{background:#fcf4f2;}
/*主体部分*/
#article-wrapper{
	width:100%;
	height:auto;
	margin-top:110px;
	background:#f7f7f7;
}
.article{
	position: relative;
}
#article-wrapper .bg{
	position: fixed;
	z-index: 0;
	width:100%;
	top:110px;
}
#article-wrapper .bg div{
	height:270px;
	width:100%;
}
#article-wrapper section div:nth-child(1) {
	background:url(../images/bg_1.jpg) center;
	display:block;
}
#article-wrapper section div:nth-child(2) {
	background:url(../images/bg_2.jpg) center;
	display:block;
}
#article-wrapper section div:nth-child(3) {
	background:url(../images/bg_3.jpg) center;
	display:block;
}
#article-wrapper section div:nth-child(4) {
	background:url(../images/bg_4.jpg) center;
	display:block;
}
.main{
	width:1120px;
	height:auto;
	border-left:40px solid #f3f3f3;
	border-right:40px solid #f3f3f3;
	border-top:48px solid #f3f3f3;
	position: absolute;
	left:50%;
	top:450px;
	transform: translateX(-50%);
}
.arr{
	position: absolute;
	top:-36px;
	left:50%;
	display: block;
	cursor: pointer;
	font-size:20px;
}
#banner{width:1120px;height:383px;position: relative;}
		#banner ul>li{position: absolute;opacity: 0;filter:alpha(opacity: 0);}
		#banner ul>li:nth-child(1){opacity: 1;filter:alpha(opacity: 100);}
		#banner ul>li>img{width:1120px;height: 383px;}
		#btn{position: absolute;left:40%;bottom:20px;}
		#btn>a{float: left;width:18px;height:18px;background: #fff;border-radius: 50%;margin:5px;}
#btn>.active{background: #ff0000;}
.title,.title1,.title2{
	background:#f3f3f3;
}
.title img,.title1 img,.title2 img{
	width:1120px;
	height:383px;
	display:block;
}
.title img{
	padding-top:20px;
}
.title span,.title1 span,.title2 span{
	display: block;
	text-align: center;
	height:40px;
	line-height: 40px;
}
.article-f{
	padding-top:30px;
	background:#F3F3F3;
	
}
.article-f p,.article-f i{
	text-align: center;
	display:block;
	
}
.article-f p{
	font-size: 20px;
}
dl{
	width:276px;
	height:310px;
	float: left;
	margin:0 2px;
	
}
dt{
	width:276px;
	height:200px;
}
dt a{
	display:block;
	width:100%;
	height:100%;
}
dt img{
	width:100%;
	height:100%;
	display:block;
}
dd{
	width:276px;
	height:80px;
	overflow: hidden;
	margin-top:20px;
	position: relative;
}
dd div{
	width:276px;
	height:80px;
	position: absolute;
	
}
.article-f dd div p {
	display:flex;
	justify-content:center;
	align-items: center;
	font-size:14px;
	height:25px;
	line-height: 25px;
}
.article-f dd div p i{
	background:#ff4001;
	color:#fff;
	border-radius: 4px;
	padding:0 4px;
	margin-right:10px;
}
.article-f dd div p:nth-child(3){
	color:#fd8b01;
}
.article-f dd div p a{
	display:block;
	width:30%;
	color:#fff;
	background:#ff4001;
	border-radius:6px;
	text-align: center;
}
.article-ft{
	height:40px;
	background:#F3F3F3;
}
.article-ft a{
	text-align: center;
	display:block;
	height:40px;
}
.article-ft a span{
	display:block;
	height:20px;
}
.article-ft a:hover{
	color:#282828;
}
